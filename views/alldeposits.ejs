<html lang="en">
<%- include('partials/header')%>
<body>
  <%- include('partials/nav')%>
  <div class="flash_msgs">
    <%- include('partials/flash_messages')%>
  </div>

   <% if (user.deposits.length > 0) { %>
       <% user.deposits.forEach(deposit => { %>
          <div class="alldeposits">
            <div class="deposit">
                <p><%= deposit.currencyType %></p>
                  <p><%= deposit.amt %></p>
                  <p><%= deposit.createdAt%></p>
              </div>
          </div>
       <% }) %>

    <% } else { %>
      <p style="font-size: 40px; color: red;">no deposits made</p>
   <% } %>
 
    

<%- include('partials/footer')%>
</body>
</html>


